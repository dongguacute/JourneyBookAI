{
  "name": "JourneyBookAI",
  "version": "1.0.0",
  "description": "An AI photo album that helps you quickly find the photos you want",
  "main": "index.js",
  "homepage": ".",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "electron-builder",
    "build:win": "electron-builder --win --publish=never",
    "build:mac": "electron-builder --mac --publish=never",
    "build:linux": "electron-builder --linux --publish=never",
    "dist": "pnpm run build"
  },
  "build": {
    "appId": "com.journeybookai.app",
    "productName": "JourneyBookAI",
    "directories": {
      "output": "dist"
    },
    "files": [
      "index.js",
      "index.html",
      "renderer.js",
      "style.css",
      "package.json",
      "img/**/*",
      "search/**/*",
      "locales/**/*"
    ],
    "win": {
      "target": "nsis",
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.photography"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "category": "Graphics",
      "maintainer": "JourneyBookAI Team <support@journeybookai.com>"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "keywords": ["electron", "photo", "ai", "album"],
  "author": {
    "name": "Cherry Fu",
    "email": "me@dongguact.top"
  },
  "license": "MIT",
  "packageManager": "pnpm@10.10.0",
  "devDependencies": {
    "electron": "^37.1.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "electron-fix": "^1.1.5"
  }
}